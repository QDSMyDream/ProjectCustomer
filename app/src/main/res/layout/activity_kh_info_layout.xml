<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/beauty_within_dialog_title_bg"
                android:gravity="center"
                android:text="客户详情界面"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_24" />

            <!--top-->
            <com.zhy.android.percent.support.PercentLinearLayout
                android:id="@+id/top_info_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@drawable/beauty_within_text_frame"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                app:layout_heightPercent="18.2%"
                app:layout_marginLeftPercent="1%"
                app:layout_marginRightPercent="1%"
                app:layout_marginTopPercent="1%">

                <!--top list1 姓名-->
                <com.zhy.android.percent.support.PercentRelativeLayout
                    android:id="@+id/top_layout1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    app:layout_widthPercent="28.5%">

                    <com.zhy.android.percent.support.PercentLinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:gravity="center"
                        android:orientation="vertical"
                        app:layout_widthPercent="27%">

                        <com.mnn.mydream.cosmetology.view.CircleImageView
                            android:id="@+id/kh_tx"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:src="@mipmap/def_photo" />

                        <com.zhy.android.percent.support.PercentLinearLayout
                            android:id="@+id/kh_vip_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="10dp"
                            android:background="@color/beauty_card_img_left_start_bg2"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:padding="3dp"
                                android:src="@mipmap/vip_img" />

                            <TextView
                                android:id="@+id/kh_vip"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:text="普通会员"
                                android:textColor="@color/beauty_left_font_select_bg"
                                android:textSize="@dimen/text_size_16" />

                        </com.zhy.android.percent.support.PercentLinearLayout>


                    </com.zhy.android.percent.support.PercentLinearLayout>

                    <com.zhy.android.percent.support.PercentLinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:orientation="vertical"
                        app:layout_widthPercent="72%">

                        <TextView
                            android:id="@+id/kh_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="靳红艳"
                            android:textColor="@color/beauty_kh_info_name_color"
                            android:textSize="@dimen/text_size_16"
                            android:textStyle="bold" />

                        <ListView
                            android:id="@+id/top_list1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="5dp"
                            android:divider="@null"
                            android:dividerHeight="0dp"
                            app:layout_heightPercent="80.2%">

                        </ListView>

                    </com.zhy.android.percent.support.PercentLinearLayout>

                </com.zhy.android.percent.support.PercentRelativeLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@color/beauty_within_lines_color"
                    app:layout_heightPercent="80.2%"></View>

                <!--top list2 姓名-->
                <com.zhy.android.percent.support.PercentLinearLayout
                    android:id="@+id/top_layout2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    app:layout_widthPercent="28.5%">

                    <ListView
                        android:id="@+id/top_list2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:divider="@null"
                        android:dividerHeight="0dp"
                        app:layout_heightPercent="80.2%"></ListView>


                </com.zhy.android.percent.support.PercentLinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@color/beauty_within_lines_color"
                    app:layout_heightPercent="80.2%"></View>

                <!--top list4 姓名-->
                <com.zhy.android.percent.support.PercentLinearLayout
                    android:id="@+id/top_layout3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    app:layout_widthPercent="28.5%">

                    <ListView
                        android:id="@+id/top_list3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:divider="@null"
                        android:dividerHeight="0dp"
                        app:layout_heightPercent="80.2%"></ListView>


                </com.zhy.android.percent.support.PercentLinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@color/beauty_within_lines_color"
                    app:layout_heightPercent="80.2%"></View>
                <!--top list3 姓名-->
                <com.zhy.android.percent.support.PercentLinearLayout
                    android:id="@+id/top_layout4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingLeft="10dp">

                    <TextView
                        android:id="@+id/label_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="客户备注"
                        android:textColor="@color/beauty_kh_info_name_color"
                        android:textSize="@dimen/text_size_16"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/top_list4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"></TextView>


                </com.zhy.android.percent.support.PercentLinearLayout>


            </com.zhy.android.percent.support.PercentLinearLayout>

            <!--content-->
            <com.zhy.android.percent.support.PercentRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:background="@color/white"
                app:layout_heightPercent="39%"
                app:layout_marginLeftPercent="1%"
                app:layout_marginRightPercent="1%"
                app:layout_marginTopPercent="1%">

                <!--content left-->
                <com.zhy.android.percent.support.PercentLinearLayout
                    android:id="@+id/content_left_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/beauty_within_text_frame"
                    android:orientation="vertical"
                    app:layout_widthPercent="31%">

                    <com.zhy.android.percent.support.PercentRelativeLayout
                        android:id="@+id/content_left_layout1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/beauty_kh_info_content_layout_top_bg"
                        app:layout_heightPercent="25%"
                        app:layout_paddingLeftPercent="5%"
                        app:layout_paddingRightPercent="5%">

                        <TextView
                            android:id="@+id/content_left_layout1_text1"
                            style="@style/khinfo_text"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="储蓄卡" />

                        <TextView
                            android:id="@+id/content_left_layout1_text2"
                            style="@style/khinfo_text2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@id/content_left_layout1_text1"
                            android:text="@string/beauty_kh_info_text_small1" />

                        <TextView
                            android:id="@+id/content_left_layout1_text3"
                            style="@style/khinfo_text2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center_vertical"
                            android:layout_toLeftOf="@id/content_left_layout1_text4"
                            android:text="余 额:" />

                        <TextView
                            android:id="@+id/content_left_layout1_text4"
                            style="@style/khinfo_text3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:text="@string/beauty_kh_info_text_small2" />


                    </com.zhy.android.percent.support.PercentRelativeLayout>

                    <com.zhy.android.percent.support.PercentRelativeLayout
                        android:id="@+id/content_left_layout2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/beauty_kh_info_left_layout_color2"
                        app:layout_heightPercent="25%"
                        app:layout_paddingLeftPercent="5%"
                        app:layout_paddingRightPercent="5%">

                        <TextView
                            android:id="@+id/content_left_layout2_text1"
                            style="@style/khinfo_text"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="项目卡" />

                        <TextView
                            android:id="@+id/content_left_layout2_text2"
                            style="@style/khinfo_text2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@id/content_left_layout2_text1"
                            android:text="@string/beauty_kh_info_text_small1" />

                        <TextView
                            android:id="@+id/content_left_layout2_text3"
                            style="@style/khinfo_text2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center_vertical"
                            android:layout_toLeftOf="@id/content_left_layout2_text4"
                            android:text="余 额:" />

                        <TextView
                            android:id="@+id/content_left_layout2_text4"
                            style="@style/khinfo_text3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:text="@string/beauty_kh_info_text_small2" />
                    </com.zhy.android.percent.support.PercentRelativeLayout>

                    <com.zhy.android.percent.support.PercentRelativeLayout
                        android:id="@+id/content_left_layout3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/beauty_kh_info_left_layout_color3"
                        app:layout_heightPercent="25%"
                        app:layout_paddingLeftPercent="5%"
                        app:layout_paddingRightPercent="5%">

                        <TextView
                            android:id="@+id/content_left_layout3_text1"
                            style="@style/khinfo_text"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="礼品卡" />

                        <TextView
                            android:id="@+id/content_left_layout3_text2"
                            style="@style/khinfo_text2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@id/content_left_layout3_text1"
                            android:text="@string/beauty_kh_info_text_small1" />

                        <TextView
                            android:id="@+id/content_left_layout3_text3"
                            style="@style/khinfo_text2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center_vertical"
                            android:layout_toLeftOf="@id/content_left_layout3_text4"
                            android:text="余 额:" />

                        <TextView
                            android:id="@+id/content_left_layout3_text4"
                            style="@style/khinfo_text3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:text="@string/beauty_kh_info_text_small2" />
                    </com.zhy.android.percent.support.PercentRelativeLayout>

                    <com.zhy.android.percent.support.PercentLinearLayout
                        android:id="@+id/content_left_layout4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/beauty_kh_info_content_layout_bottom_bg"
                        android:orientation="horizontal"
                        app:layout_heightPercent="25%"
                        app:layout_paddingLeftPercent="5%"
                        app:layout_paddingRightPercent="5%">

                        <com.zhy.android.percent.support.PercentLinearLayout

                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:orientation="vertical"
                            app:layout_widthPercent="22.5%">

                            <TextView
                                style="@style/khinfo_text2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="单次服务" />

                            <TextView
                                android:id="@+id/dc_fuwu"
                                style="@style/khinfo_text3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/beauty_kh_info_text_small3" />

                        </com.zhy.android.percent.support.PercentLinearLayout>

                        <com.zhy.android.percent.support.PercentLinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:orientation="vertical"
                            app:layout_widthPercent="22.5%">

                            <TextView
                                style="@style/khinfo_text2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="优惠券" />

                            <TextView
                                android:id="@+id/yhq"
                                style="@style/khinfo_text3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/beauty_kh_info_text_small1" />

                        </com.zhy.android.percent.support.PercentLinearLayout>

                        <com.zhy.android.percent.support.PercentLinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:orientation="vertical"
                            app:layout_widthPercent="22.5%">

                            <TextView

                                style="@style/khinfo_text2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="欠款" />

                            <TextView
                                android:id="@+id/qk"
                                style="@style/khinfo_text3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/beauty_kh_info_text_small2" />

                        </com.zhy.android.percent.support.PercentLinearLayout>

                        <com.zhy.android.percent.support.PercentLinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:orientation="vertical"
                            app:layout_widthPercent="22.5%">

                            <TextView
                                style="@style/khinfo_text2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="赠送金" />

                            <TextView
                                android:id="@+id/zsj"
                                style="@style/khinfo_text3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/beauty_kh_info_text_small2" />

                        </com.zhy.android.percent.support.PercentLinearLayout>


                    </com.zhy.android.percent.support.PercentLinearLayout>

                </com.zhy.android.percent.support.PercentLinearLayout>


                <!--content right-->
                <com.zhy.android.percent.support.PercentLinearLayout
                    android:id="@+id/content_right_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/content_left_layout"
                    android:background="@drawable/beauty_within_text_frame"
                    android:orientation="vertical"
                    android:padding="1dp"
                    app:layout_marginLeftPercent="1%">

                    <com.zhy.android.percent.support.PercentRelativeLayout
                        android:id="@+id/content_right_layout2"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@color/beauty_kh_info_left_layout_color5"
                        app:layout_paddingLeftPercent="2%"
                        app:layout_paddingRightPercent="2%">

                        <TextView
                            android:id="@+id/content_right_layout2_text1"
                            style="@style/khinfo_text"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="到店情况"
                            android:textSize="20sp" />

                        <com.zhy.android.percent.support.PercentLinearLayout
                            android:id="@+id/content_right_layout3"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true">

                            <ImageView
                                android:id="@+id/content_right_layout2_img1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:src="@mipmap/arrow_left_black" />

                            <TextView
                                android:id="@+id/content_right_layout2_text2"
                                style="@style/khinfo_text"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:gravity="center"
                                android:text="@string/beauty_kh_info_text_small5" />

                            <ImageView
                                android:id="@+id/content_right_layout2_img2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:src="@mipmap/arrow_right_black" />


                        </com.zhy.android.percent.support.PercentLinearLayout>

                        <TextView
                            android:id="@+id/content_right_layout2_text3"
                            style="@style/khinfo_text"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:gravity="center"
                            android:text="@string/beauty_kh_info_text_small4"
                            android:textSize="20sp" />

                    </com.zhy.android.percent.support.PercentRelativeLayout>

                    <ListView
                        android:id="@+id/content_right_list"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:dividerHeight="1dp"></ListView>


                </com.zhy.android.percent.support.PercentLinearLayout>
            </com.zhy.android.percent.support.PercentRelativeLayout>

            <com.zhy.android.percent.support.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:background="@color/white"
                android:orientation="vertical"
                app:layout_heightPercent="55%"
                app:layout_marginLeftPercent="1%"
                app:layout_marginRightPercent="1%"
                app:layout_marginTopPercent="1%">

                <com.zhy.android.percent.support.PercentLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/beauty_kh_info_left_layout_color5">

                    <TextView
                        android:id="@+id/bottom_text1"
                        style="@style/BeautyTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:background="@drawable/beauty_within_text_frame_option"
                        android:text="购买记录"
                        app:layout_widthPercent="12%" />

                    <TextView
                        android:id="@+id/bottom_text2"
                        style="@style/BeautyTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_toRightOf="@id/sale_text"
                        android:background="@drawable/beauty_within_text_frame_no_option"
                        android:text="服务核销记录"
                        app:layout_widthPercent="12%" />

                    <TextView
                        android:id="@+id/bottom_text3"
                        style="@style/BeautyTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_toRightOf="@id/sale_text"
                        android:background="@drawable/beauty_within_not_select_bg"
                        android:text="服务日志"
                        app:layout_widthPercent="12%" />

                    <TextView
                        android:id="@+id/bottom_text4"
                        style="@style/BeautyTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_toRightOf="@id/sale_text"
                        android:background="@drawable/beauty_within_not_select_bg"
                        android:text="欠款记录"
                        app:layout_widthPercent="12%" />

                </com.zhy.android.percent.support.PercentLinearLayout>

                <com.mnn.mydream.cosmetology.view.MyViewPager
                    android:id="@+id/viewpagers"
                    android:layout_width="match_parent"
                    android:layout_height="500dp"
                    android:layout_marginTop="5dp">

                </com.mnn.mydream.cosmetology.view.MyViewPager>
            </com.zhy.android.percent.support.PercentLinearLayout>

        </com.zhy.android.percent.support.PercentLinearLayout>
    </ScrollView>
</com.zhy.android.percent.support.PercentLinearLayout>



