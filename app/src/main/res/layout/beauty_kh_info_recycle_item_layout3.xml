<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="@color/white"
    android:orientation="vertical">

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/beauty_kh_info_left_layout_color5"
        app:layout_marginLeftPercent="1%"
        app:layout_marginRightPercent="1%"
        app:layout_marginTopPercent="2%"
        app:layout_paddingLeftPercent="2%"
        app:layout_paddingRightPercent="2%">


        <TextView
            android:id="@+id/bottom_text1"
            style="@style/BeautyTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/beauty_within_text_frame_option"
            android:text="购买记录"
            app:layout_widthPercent="12%" />

        <TextView
            android:id="@+id/bottom_text2"
            style="@style/BeautyTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_toRightOf="@id/sale_text"
            android:background="@drawable/beauty_within_text_frame_no_option"
            android:text="服务核销记录"
            app:layout_widthPercent="12%" />

        <TextView
            android:id="@+id/bottom_text3"
            style="@style/BeautyTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_toRightOf="@id/sale_text"
            android:background="@drawable/beauty_within_not_select_bg"
            android:text="服务日志"
            app:layout_widthPercent="12%" />

        <TextView
            android:id="@+id/bottom_text4"
            style="@style/BeautyTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_toRightOf="@id/sale_text"
            android:background="@drawable/beauty_within_not_select_bg"
            android:text="欠款记录"
            app:layout_widthPercent="12%" />

    </com.zhy.android.percent.support.PercentLinearLayout>

    <com.mnn.mydream.cosmetology.view.MyViewPager
        android:id="@+id/viewpagers"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginTop="5dp">

    </com.mnn.mydream.cosmetology.view.MyViewPager>
</com.zhy.android.percent.support.PercentLinearLayout>


