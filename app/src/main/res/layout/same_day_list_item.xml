<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">

    <com.zhy.android.percent.support.PercentLinearLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/hor_text_style"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_name"
            style="@style/HorTextStyle"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="姓名"
            app:layout_widthPercent="8%" />


        <TextView
            android:id="@+id/item_phone"
            style="@style/HorTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号"
            app:layout_widthPercent="17%" />


        <TextView
            android:id="@+id/item_sex"
            style="@style/HorTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="3dp"
            android:lineSpacingMultiplier="1.5"
            android:text="性别"
            android:visibility="gone"
            app:layout_widthPercent="10%" />

        <TextView
            android:id="@+id/item_tx"
            style="@style/HorTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="3dp"
            android:lineSpacingMultiplier="1.5"
            android:text="照片"
            android:visibility="gone"
            app:layout_widthPercent="10%" />

        <TextView
            android:id="@+id/item_age_barthday"
            style="@style/HorTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="3dp"
            android:lineSpacingMultiplier="1.5"
            android:text="生日"
            android:visibility="gone"
            app:layout_widthPercent="20%" />

        <TextView
            android:id="@+id/item_age"
            style="@style/HorTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="3dp"
            android:lineSpacingMultiplier="1.5"
            android:text="年龄"
            app:layout_widthPercent="8%" />

        <TextView
            android:id="@+id/item_time"
            style="@style/HorTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="3dp"
            android:lineSpacingMultiplier="1.5"
            android:text="日期"
            app:layout_widthPercent="15%" />

        <TextView
            android:id="@+id/item_money"
            style="@style/HorTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="3dp"
            android:lineSpacingMultiplier="1.5"
            android:text="缴费金额"
            android:textColor="@color/primary_dark"
            app:layout_widthPercent="15%" />

        <TextView
            android:id="@+id/item_puse"
            style="@style/HorTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="3dp"
            android:lineSpacingMultiplier="1.5"
            android:text="是否团购"
            android:visibility="gone"
            app:layout_widthPercent="20%" />

        <TextView
            android:id="@+id/item_puse_projects"
            style="@style/HorTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="3dp"
            android:lineSpacingMultiplier="1.5"
            android:text="团购项目"
            android:visibility="gone"
            app:layout_widthPercent="30%" />

        <TextView
            android:id="@+id/item_peojects"
            style="@style/HorTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="3dp"
            android:lineSpacingMultiplier="1.5"
            android:text="项目"
            app:layout_widthPercent="32%" />


        <TextView
            android:id="@+id/item_count"
            style="@style/HorTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="3dp"
            android:lineSpacingMultiplier="1.5"
            android:text="总次数"
            android:visibility="gone"
            app:layout_widthPercent="10%" />

        <TextView
            android:id="@+id/item_txt1"
            style="@style/HorTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="3dp"
            android:lineSpacingMultiplier="1.5"
            android:text="预留字段1"
            android:visibility="gone"
            app:layout_widthPercent="20%" />

        <TextView
            android:id="@+id/item_txt2"
            style="@style/HorTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="3dp"
            android:lineSpacingMultiplier="1.5"
            android:text="预留字段2"
            android:visibility="gone"
            app:layout_widthPercent="20%" />

    </com.zhy.android.percent.support.PercentLinearLayout>


