<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipelistlayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/list_bg_lelector"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <com.zhy.android.percent.support.PercentLinearLayout
            android:id="@+id/item_layout1"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/tx_roundedImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:padding="2dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/find1"
                app:riv_border_color="#333333"
                app:riv_corner_radius="20dp"
                app:riv_mutate_background="true"
                app:riv_oval="true"
                app:riv_tile_mode="repeat" />

            <com.zhy.android.percent.support.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:text="张三"
                    app:layout_widthPercent="15%"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_18" />

                <TextView
                    android:id="@+id/sex"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:text="男"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_18" />

                <TextView
                    android:id="@+id/age"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="23"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_18" />


                <TextView
                    android:id="@+id/phone"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:text="18339401058"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_18"
                    app:layout_widthPercent="15%" />

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:text="18339401058"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_18"
                    app:layout_widthPercent="15%" />

            </com.zhy.android.percent.support.PercentLinearLayout>


        </com.zhy.android.percent.support.PercentLinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@android:color/holo_blue_light" />

        <com.zhy.android.percent.support.PercentLinearLayout
            android:id="@+id/item_layout2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/list_bg_lelector"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView

                style="@style/HorTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="服务项目"
                app:layout_widthPercent="13%" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@android:color/holo_blue_light" />

            <TextView

                style="@style/HorTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="项目总价格"
                app:layout_widthPercent="10%" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@android:color/holo_blue_light"></View>

            <TextView

                style="@style/HorTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="缴费金额"
                android:textColor="@color/primary_dark"
                app:layout_widthPercent="10%" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@android:color/holo_blue_light"></View>


            <TextView

                style="@style/HorTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="分期"
                app:layout_widthPercent="7%" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@android:color/holo_blue_light"></View>

            <TextView

                style="@style/HorTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="剩余金额"
                android:textColor="@color/primary_dark"
                app:layout_widthPercent="10%" />


            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@android:color/holo_blue_light"></View>

            <TextView

                style="@style/HorTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="年卡"
                app:layout_widthPercent="10%" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@android:color/holo_blue_light" />


            <TextView

                style="@style/HorTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="办理时间"
                app:layout_widthPercent="20%" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@android:color/holo_blue_light"></View>

            <TextView

                style="@style/HorTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="到期时间"
                app:layout_widthPercent="20%" />


        </com.zhy.android.percent.support.PercentLinearLayout>


    </com.zhy.android.percent.support.PercentLinearLayout>


</com.zhy.android.percent.support.PercentLinearLayout>
